# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false


# sh
[*.{sh,zsh,bash,fish,nu}]
indent_size = 2
indent_style = space
end_of_line = lf


[*.{ps1,psm1,psd1}]
end_of_line = crlf
indent_size = 4
indent_style = space

[*.{md,markdown,adoc,asciidoc}]
insert_final_newline = true
indent_size = 2
indent_style = space
